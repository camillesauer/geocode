<div class="d-flex container justify-content-center display-bubble">
    <%= simple_form_for(@poete) do |f| %>
         <%= f.error_notification %>
         <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

         <div class="form-inputs">
           <h3 class="title-new">Modifier un poète</h3>
            <h5>Titre</h5>
            <%= f.input :titre_poete %>
            <h5>Sous-titre</h5>
            <%= f.input :sous_titre_poete %>
            <h5>Date</h5>
            <%= f.input :date_poete %>
            <h5>Lieu</h5>
            <%= f.input :lieu_poete %>
            <h5>Sites internets (5 liens url)</h5>
            <%= f.input :lien_url_poete_1 %>
            <%= f.input :lien_url_poete_2 %>
            <%= f.input :lien_url_poete_3 %>
            <%= f.input :lien_url_poete_4 %>
            <%= f.input :lien_url_poete_5 %>
            <h5>Introduction</h5>
            <%= f.input :introduction_poete %>
            <h5>Paragraphes (5 max)</h5>
            <%= f.input :paragraphe_poete_1 %>
            <%= f.input :paragraphe_poete_2 %>
            <%= f.input :paragraphe_poete_3 %>
            <%= f.input :paragraphe_poete_4 %>
            <%= f.input :paragraphe_poete_5 %>
            <h5>Image 1 (Cloudinary)</h5>
            <%= f.input :image_poete_1 %>
            <h5>Légende 1</h5>
            <%= f.input :legende_image_poete_1 %>
            <h5>Image 2 (Cloudinary)</h5>
            <%= f.input :image_poete_2 %>
            <h5>Légende 2</h5>
