            <%= f.input :image_poete_10 %>
            <h5>Légende 10</h5>
            <%= f.input :legende_image_poete_10 %>
             <h5>Vidéos - <br>
            Lien Youtube / Vimeo (max 5)</h5>
            <%= f.input :video_poete_1 %>
            <%= f.input :video_poete_2 %>
            <%= f.input :video_poete_3 %>
            <%= f.input :video_poete_4 %>
            <%= f.input :video_poete_5 %>
              <h5>Audio (Cloudinary)</h5>
