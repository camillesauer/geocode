            <h5>Légende 5</h5>
            <%= f.input :legende_image_poete_5 %>
            <h5>Image 6 (Cloudinary)</h5>
            <%= f.input :image_poete_6 %>
            <h5>Légende 6</h5>
            <%= f.input :legende_image_poete_6 %>
            <h5>Image 7 (Cloudinary)</h5>
            <%= f.input :image_poete_7 %>
            <h5>Légende 7</h5>
            <%= f.input :legende_image_poete_7 %>
            <h5>Image 8 (Cloudinary)</h5>
            <%= f.input :image_poete_8 %>
            <h5>Légende 8</h5>
            <%= f.input :legende_image_poete_8 %>
            <h5>Image 9 (Cloudinary)</h5>
            <%= f.input :image_poete_9 %>
            <h5>Légende 9</h5>
            <%= f.input :legende_image_poete_9 %>
